{
  "license": "proprietary",
  "autoload": {
    "psr-4": { "DoctrineMigrations\\": "src/Migrations/", "": "src/" }
  },
  "autoload-dev": {
    "psr-4": { "Tests\\": "tests/" }
  },
  "require": {
    "php": "^7.3.0",
    "beberlei/assert": "^2.7",
    "matthiasnoback/convenient-immutability": "^0.2.1",
    "sensiolabs/security-checker": "^4.1",
    "symfony/asset": "^4.0",
    "symfony/console": "^4.0",
    "symfony/dotenv": "^4.0",
    "symfony/flex": "^1.0",
    "symfony/form": "^4.0",
    "symfony/framework-bundle": "^4.0",
    "symfony/intl": "^4.0",
    "symfony/maker-bundle": "^1.0",
    "symfony/monolog-bundle": "^3.0",
    "symfony/orm-pack": "^1.0",
    "symfony/profiler-pack": "^1.0",
    "symfony/requirements-checker": "^1.0",
    "symfony/security-csrf": "^4.1",
    "symfony/templating": "^4.0",
    "symfony/web-profiler-bundle": "^4.0",
    "symfony/web-server-bundle": "^4.0",
    "symfony/yaml": "^4.0",
    "doctrine/doctrine-migrations-bundle": "^2.0"
  },

  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "symfony/inflector" : "^4.0",
    "phpstan/phpstan": "^0.10.5"
  },

  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "component-dir": "public/assets/vendor"
  },

  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
      "security-checker security:check": "script",
      "requirements-checker": "script",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-root-package-install": [
      "SymfonyStandard\\Composer::hookRootPackageInstall"
    ],
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "id": "01C0957RHS9VFRTTPZEKEE494C",
      "allow-contrib": false
    }
  },
  "repositories": {
    "packagist.org": {
      "type": "composer",
      "url": "https://packagist.org"
    }
  }
}
